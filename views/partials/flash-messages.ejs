<% if (locals.hasMessages()) { %>

  <div class="ctr no-bg">
    <ul class="flash-msgs">
      <% Object.entries(locals.getMessages()).forEach(([type, msgs]) => { %>
        <% msgs.forEach(msg => { %>
          <li class="flash-msg <%= type %>">
            <span><%= msg %></span>
            <button class="close-flash">‚ùå</button>
          </li>
        <% }) %>
      <% }) %>
    </ul>
  </div>
<% } %>
